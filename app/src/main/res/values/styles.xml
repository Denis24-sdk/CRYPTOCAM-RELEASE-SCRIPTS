<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="longTextStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="titleStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.App.NoDisplay" parent="Theme.AppCompat.NoActionBar">
        <!-- Делаем фон окна прозрачным -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Указываем, что окно полупрозрачное -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Отключаем анимацию появления и исчезновения окна -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
