<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/keyDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        tools:title="Some key" />

    <ImageView
        android:id="@+id/keyDetailQrCodeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyDetailToolbar"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/keyDetailKeyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyDetailQrCodeView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:text="@string/public_key"/>

    <TextView
        android:id="@+id/keyDetailKeyView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyDetailKeyLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/keyDetailCopyButton"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="age1xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>

    <ImageButton
        android:id="@+id/keyDetailCopyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_content_copy"
        app:layout_constraintTop_toTopOf="@id/keyDetailKeyView"
        app:layout_constraintBottom_toBottomOf="@id/keyDetailKeyView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/keyDetailFingerprintLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyDetailKeyView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:text="@string/fingerprint"/>

    <TextView
        android:id="@+id/keyDetailFingerprintView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyDetailFingerprintLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="11223344556677889900aabbccddeeff"/>

</androidx.constraintlayout.widget.ConstraintLayout>